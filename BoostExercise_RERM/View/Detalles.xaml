                            <Label Text="Dia5" TextColor="Gray" HorizontalOptions="Center"/>
                        </StackLayout>
                        <StackLayout Grid.Row="2" Grid.Column="2" Margin="10">
                            <Label FontSize="25" FontAttributes="Bold" TextColor="White"/>
                            <!--text={binding-->
                            <Label Text="Dia6" TextColor="Gray" HorizontalOptions="Center"/>
                        </StackLayout>
                        <StackLayout Grid.Row="2" Grid.Column="3" Margin="10">
                            <Label FontSize="25" FontAttributes="Bold" TextColor="White"/>
                            <!--text={binding-->
                            <Label Text="Dia7" TextColor="Gray" HorizontalOptions="Center"/>
                        </StackLayout>
                    </Grid>
                </StackLayout>
            </Grid>
            <Frame CornerRadius="30" Margin="0,20,0,0" Padding="0" HeightRequest="65" HasShadow="False">
                <Grid ColumnDefinitions="*,*" BackgroundColor="Red">
                    <Button Text="Editar" BackgroundColor="Orange" CornerRadius="25" Margin="-5,0,-10,0" FontAttributes="Bold" Grid.Column="0"/><!--Command="{Binding EditarCommand}" CommandParameter="{Binding .}"-->
                    <Button Text="ELiminar" BackgroundColor="Red" CornerRadius="25" Margin="210,0,-200,0" FontAttributes="Bold"/><!--Command="{Binding EliminarCommand}" CommandParameter="{Binding Txtnro}"/>-->
                    <Button Text="Completar" BackgroundColor="Green" CornerRadius="25" Margin="210,0,-200,0" FontAttributes="Bold"/>
                </Grid>
            </Frame>
