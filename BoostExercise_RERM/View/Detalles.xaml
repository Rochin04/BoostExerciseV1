                    <TapGestureRecognizer/><!-- Command="{Binding Volvercommand}"/-->
                </Image.GestureRecognizers>
            </Image>
            <!--aqui se puede mejorar xddd-->
            <Grid RowDefinitions="auto,100">
                <StackLayout Orientation="Horizontal" Margin="10,20,10,10">
                    <Grid>
                        <StackLayout Grid.Row="1" Grid.Column="1" Margin="10">
                            <Label FontSize="25" FontAttributes="Bold" TextColor="White"/>
                            <!--text={binding-->
                            <Label Text="Dia" TextColor="Gray" HorizontalOptions="Center"/>
                        </StackLayout>
                        <StackLayout Grid.Row="1" Grid.Column="2" Margin="10">
                            <Label FontSize="25" FontAttributes="Bold" TextColor="White"/>
                            <!--text={binding-->
                            <Label Text="Dia2" TextColor="Gray" HorizontalOptions="Center"/>
                        </StackLayout>
                        <StackLayout Grid.Row="1" Grid.Column="3" Margin="10">
                            <Label FontSize="25" FontAttributes="Bold" TextColor="White"/>
                            <!--text={binding-->
                            <Label Text="Dia3" TextColor="Gray" HorizontalOptions="Center"/>
                        </StackLayout>
                        <StackLayout Grid.Row="1" Grid.Column="4" Margin="10">
                            <Label FontSize="25" FontAttributes="Bold" TextColor="White"/>
                            <!--text={binding-->
                            <Label Text="Dia4" TextColor="Gray" HorizontalOptions="Center"/>
                        </StackLayout>
                        <StackLayout Grid.Row="2" Grid.Column="1" Margin="10">
                            <Label FontSize="25" FontAttributes="Bold" TextColor="White"/>
